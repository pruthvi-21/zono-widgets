<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_weight="1"
    tools:layout_height="120dp"
    tools:layout_width="180dp">

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_widget_clock_night" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textDirection="locale"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Tokyo"
                tools:textColor="@color/text_color_night" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@null"
                android:gravity="bottom"
                tools:src="@drawable/ic_moon_24dp" />
        </LinearLayout>

        <TextClock
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="@string/widget_date_format"
            android:format24Hour="@string/widget_date_format"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:timeZone="Asia/Tokyo"
            tools:textColor="@color/text_color_night" />

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextClock
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="@string/widget_format_time_12"
                android:format24Hour="@string/widget_format_time_24"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                tools:textColor="@color/text_color_night" />

            <TextClock
                android:id="@+id/amPmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="a"
                android:format24Hour=""
                android:gravity="bottom"
                android:paddingStart="4dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry"
                tools:textColor="@color/text_color_night" />

            <TextView
                android:id="@+id/flag_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|end"
                android:textSize="24sp"
                tools:text="ðŸ‡¯ðŸ‡µ" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
